<Configuration xmlns="http://logging.apache.org/log4j/2.0/config"
               strict="true"
               packages="pl.wavesoftware">
  <Properties>
    <Property
      name="CONSOLE_LOG_PATTERN">%clr{%5p} %clr{%d{HH:mm:ss.SSS}}{faint} %clr{[%10.10t]}{yellow} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%ex</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT" follow="true">
      <PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}" />
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="pl.wavesoftware" level="debug" />
    <Root level="info">
      <AppenderRef ref="Console" />
    </Root>
  </Loggers>
</Configuration>
